   print(s8);
    print(s9);
      print(s10);
  
  
  // Example Second:
  int len, bre;
    len = 10;
      bre = 20;
        print("length $len * breadth $bre : ${len * bre}");
        
        print('sum of $len & $bre : ${len + bre}');
    
